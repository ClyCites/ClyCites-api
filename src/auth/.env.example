# Environment
NODE_ENV=development
PORT=5000

# Database - MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database_name?retryWrites=true&w=majority&appName=ClyCitesAuth

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random-change-in-production
JWT_EXPIRE=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-make-it-different-change-in-production
JWT_REFRESH_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Session
SESSION_SECRET=your-session-secret-here-change-in-production

# Client URL
CLIENT_URL=http://localhost:3000

# Email Configuration - Gmail with App Password
EMAIL_SERVICE=gmail
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=noreply@clycites.com
EMAIL_FROM_NAME=ClyCites
EMAIL_REPLY_TO=support@clycites.com

# Alternative Email Services (uncomment to use)
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# EMAIL_SERVICE=mailgun
# MAILGUN_USERNAME=your-mailgun-username
# MAILGUN_PASSWORD=your-mailgun-password

# EMAIL_SERVICE=outlook
# EMAIL_USERNAME=your-email@outlook.com
# EMAIL_PASSWORD=your-outlook-password

# EMAIL_SERVICE=yahoo
# EMAIL_USERNAME=your-email@yahoo.com
# EMAIL_PASSWORD=your-yahoo-app-password

# EMAIL_SERVICE=zoho
# EMAIL_USERNAME=your-email@zoho.com
# EMAIL_PASSWORD=your-zoho-password

# Custom SMTP (for any provider)
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=7200000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_MAX=5

# Production Settings (uncomment for production)
# NODE_ENV=production
# JWT_SECRET=your-production-jwt-secret-very-long-and-random
# JWT_REFRESH_SECRET=your-production-refresh-secret-very-long-and-random
# SESSION_SECRET=your-production-session-secret
# CLIENT_URL=https://your-production-domain.com
